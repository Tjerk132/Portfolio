{
    "ts-node": {
        "files": true
    },
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "outDir": "build",
        "rootDir": "",
        "typeRoots": [
            "./src/@types",
        ], /* Specify multiple folders that act like './node_modules/@types'. */
        "plugins": [
            {
                "transform": "@threeify/typescript-plugin-glsl-transpiler"
            }
        ]
    }
}